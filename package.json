{
    "name": "volatile-workspace",
    "version": "1.0.0",
    "private": true,
    "description": "Root workspace for Volatile application",
    "scripts": {
        "dev": "concurrently \"npm start --prefix client\" \"npm start --prefix server\" \"python python_analysis/api_server.py\"",
        "start": "npm run dev",
        "test": "concurrently \"npm run test:server\" \"npm run test:client\" \"npm run test:python\"",
        "test:server": "npm test --prefix server",
        "test:client": "npm test --prefix client -- --watchAll=false",
        "test:python": "cd python_analysis && pytest"
    },
    "devDependencies": {
        "@aws-amplify/backend": "^1.20.0",
        "@aws-amplify/backend-cli": "^1.8.2",
        "aws-cdk-lib": "^2.236.0",
        "concurrently": "^8.2.2",
        "constructs": "^10.4.5",
        "esbuild": "^0.27.2",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "aws-amplify": "^6.16.0"
    }
}
