{
    "name": "volatile-workspace",
    "version": "1.0.0",
    "private": true,
    "description": "Root workspace for Volatile application",
    "scripts": {
        "dev": "concurrently \"npm start --prefix client\" \"npm start --prefix server\" \"python python_analysis/api_server.py\"",
        "start": "npm run dev",
        "build": "npm run build --prefix client",
        "build:server": "cd server && npm install --production",
        "postinstall": "npm install --prefix client",
        "deploy": "npx ampx sandbox delete --yes && npx ampx sandbox",
        "test": "concurrently \"npm run test:server\" \"npm run test:client\" \"npm run test:python\"",
        "test:server": "npm test --prefix server",
        "test:client": "npm test --prefix client -- --watchAll=false",
        "test:python": "cd python_analysis && pytest"
    },
    "devDependencies": {
        "@aws-amplify/backend": "^1.20.0",
        "@aws-amplify/backend-cli": "^1.8.2",
        "aws-cdk-lib": "^2.236.0",
        "concurrently": "^8.2.2",
        "constructs": "^10.4.5",
        "esbuild": "^0.27.2",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "@aws-sdk/client-dynamodb": "^3.980.0",
        "@aws-sdk/lib-dynamodb": "^3.980.0",
        "@vendia/serverless-express": "^4.12.6",
        "aws-amplify": "^6.16.0",
        "axios": "^1.13.4",
        "cors": "^2.8.6",
        "dotenv": "^17.2.3",
        "express": "^5.2.1",
        "multer": "^2.0.2"
    }
}
